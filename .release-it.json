{
  "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
  "plugins": {
    "@release-it/bumper": {
      "in": {
        "file": "VERSION",
        "type": "text/plain"
      },
      "out": {
        "file": "VERSION",
        "type": "text/plain"
      }
    },
    "@release-it/conventional-changelog": {
      "parserOpts": {
        "headerPattern": "^(?:\\\\[(\\\\w+-\\\\d+)\\\\] )?(\\\\w+)(?:\\\\((.*)\\\\))?: (.*)$",
        "headerCorrespondence": [
          "ticket",
          "type",
          "scope",
          "subject"
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# 更新历史 \\n",
      "writerOpts": {
        "headerPartial": "## [{{version}}]({{@root.host}}/{{@root.owner}}/{{@root.repository}}/compare/{{previousTag}}...{{currentTag}}) ({{date}}) \\n",
        "commitPartial": "* {{subject}} \\n"
      }
    }
  },
  "npm": {
    "publish": false
  }
}